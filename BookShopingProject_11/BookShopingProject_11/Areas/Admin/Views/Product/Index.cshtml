
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;New Product</a>
    </div>
</div>
<div class="border-4 p-2 m-2">
    <table id="tblData" class="table table-bordered table-active table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts
{
<script src="~/js/Product.js"></script>
}