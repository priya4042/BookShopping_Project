<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Company List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-primary">
            <i class="fas fa-plus"></i>&nbsp; Create New Company
        </a>
    </div>
</div>
<div class="border p-2 m-2">
    <table id="tblData" class="table table-active table-bordered table-striped">
        <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th>
                <th>PhoneNumber</th>
                <th>IsAuthorized</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts
{
<script src="~/js/Company.js"></script>
}
